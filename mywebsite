<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
/* ================= NAVIGATION ================= */
const sections = document.querySelectorAll('.page-section');
const navLinks = document.querySelectorAll('header nav a');
const banner = document.getElementById('banner');

navLinks.forEach(link=>{
  link.addEventListener('click',()=>{
    const targetId = link.dataset.target;
    sections.forEach(s=>s.classList.remove('show'));
    document.getElementById(targetId).classList.add('show');
    navLinks.forEach(l=>l.classList.remove('active'));
    link.classList.add('active');
    banner.style.display = (targetId==="utama") ? "block":"none";
    window.scrollTo({top:0, behavior:'smooth'});
  });
});

/* ================= LINE CHART ================= */
new Chart(document.getElementById('demografiChart'),{
  type:'line',
  data:{
    labels:['Jumlah Kampung','Jumlah Mukim','Jumlah Penduduk','Jumlah Rumah','Jumlah KIR'],
    datasets:[{
      label:'Demografi Nabawan',
      data:[147,6,28101,3920,4100],
      borderColor:'#0c183c',
      backgroundColor:'rgba(12,24,60,0.15)',
      fill:true,
      tension:0.4,
      pointRadius:5
    }]
  },
  options:{
    responsive:true,
    animation:{ duration:1500 },
    scales:{ y:{ beginAtZero:true } }
  }
});

/* ================= COUNT-UP ================= */
function animateCounts() {
  const counters = document.querySelectorAll('.stat-card');
  counters.forEach(counter=>{
    let target = parseInt(counter.getAttribute('data-count'));
    if(isNaN(target)) return;
    let span = counter.querySelector('.count');
    let count = 0;
    let step = Math.ceil(target/100);
    let interval = setInterval(()=>{
      count += step;
      if(count>=target){ count=target; clearInterval(interval);}
      span.innerText = count.toLocaleString();
    }, 20);
  });
}
window.onload = animateCounts;

/* ================= ADVANCED ANIMATION ================= */
const animateItems = document.querySelectorAll('.animate-title');
const statCards = document.querySelectorAll('.stat-card');
const alertCards = document.querySelectorAll('.alert-card');

const observer = new IntersectionObserver(entries=>{
  entries.forEach(entry=>{
    if(entry.isIntersecting){
      if(!entry.target.classList.contains('stat-card') && !entry.target.classList.contains('alert-card')){
        entry.target.classList.add('show');
      } else {
        const allCards = [...statCards, ...alertCards];
        const index = allCards.indexOf(entry.target);
        setTimeout(()=>{entry.target.classList.add('show');}, index*150);
      }
    }
  });
},{ threshold: 0.2 });

animateItems.forEach(el=>observer.observe(el));
[...statCards, ...alertCards].forEach(el=>observer.observe(el));
</script>

